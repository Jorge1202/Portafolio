---
import Layout from "../layouts/Layout.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title="Rick and Morty">

    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
  
          <div class="d-flex justify-content-between align-items-center">
            <h2>Rick and Morty</h2>
            <ol>
              <li><a href="/#portfolio">Portfolio</a></li>
              <li>Rick and Morty</li>
            </ol>
          </div>
  
        </div>
      </section>
      <!-- End Breadcrumbs -->

          <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
  
          <div class="row gy-4">
  
            <div class="col-lg-8">
              <div class="portfolio-details-slider swiper">
                <div class="swiper-wrapper align-items-center">
  
                  <div class="swiper-slide">
                    <img src="/Assets/img/portfolio/rickandmorty/rickandmorty.yorchmystery.png" alt="">
                  </div>

                  <div class="swiper-slide">
                    <img src="/Assets/img/portfolio/rickandmorty/mobile.png" alt="">
                  </div>
  
                  <div class="swiper-slide">
                    <img src="/Assets/img/portfolio/rickandmorty/personajes.png" alt="">
                  </div>
  
                  <div class="swiper-slide">
                    <img src="/Assets/img/portfolio/rickandmorty/favoritos.png" alt="">
                  </div>
  
                </div>
                <div class="swiper-pagination"></div>
              </div>
            </div>
  
            <div class="col-lg-4">
              <div class="portfolio-info">
                <h3>Project information</h3>
                <ul>
                  <li><strong>Categoría</strong>: Consumo de APIs</li>
                  <li><strong>Fecha del proyecto</strong>: enero 2022</li>
                  <li><strong>Tecnologías Utilizadas</strong>: React, HTML, CSS, JavaScript, API de Rick and Morty</li>
                  <li><strong>URL del proyecto</strong>: <a href="http://rickandmorty.yorchmystery.com/" target="_blank">Rick and Morty</a></li>
                </ul>
              </div>
              <div class="portfolio-description">
                <h2>Descripción</h2>
                <p>
                  Una aplicación web que permite explorar información detallada sobre personajes, 
                  episodios y ubicaciones de la serie "Rick and Morty" utilizando la API pública de Rick and Morty.
                </p>
              </div>
              <div class="portfolio-description">
                <h2>Desafíos y Soluciones</h2>
                <p>
                  Manejo eficiente de datos en tiempo real y optimización de la carga de imágenes y detalles.
                </p>
              </div>
              <div class="portfolio-description">
                <h2>Resultados y Logros</h2>
                <p>
                  Creación de una herramienta interactiva y educativa para los fans de la serie, mejorando el acceso a la información detallada del universo "Rick and Morty".
                </p>
              </div>

              
            </div>
  
          </div>
  
        </div>
      </section><!-- End Portfolio Details Section -->
    </main>
    
    <style></style>
</Layout>